<div class="container search-bar">
  <div class="search-bar-outer row col">
    <div class="col d-flex bd-highlight search-bar-inner justify-content-around">
     <div class="p-2 flex-fill bd-highlight"> 
      <form action="/search">
          <h4 class="mb-2 search-bar-title">尋找餐廳：</h4>        
          <div class="input-group">
            <input
              type="text"
              name="keyword"
              class="form-control"
              placeholder="輸入餐廳、分類"
              aria-label="Restaurant Name..."
              aria-describedby="search-button"
              value="{{keyword}}">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
      </form>
     </div>
     <div class="p-2 flex-fill bd-highlight">
      <form action="./sort">
          <h4 class="mb-2" for="sort">排序餐廳</h4>
          <select id="sort" name="sort" onchange="form.submit()">
            <option>請選擇...</option>
            <option value="name_asc">A -> Z</option>
            <option value="name_desc">Z -> A</option>
            <option value="rating_asc">評分(1->5)</option>
            <option value="rating_desc">地區(5->1)</option>
          </select>
      </form>
     </div> 
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5 px-md-5">
  <div class="row">
          {{#each restaurantData}}
       <div class="col-12 col-sm-6 col-md-4">
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class='badge rounded-pill bg-danger fw-normal'>
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="card-footer d-flex justify-content-end flex-wrap">
              <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-link btn-sm">Edit</button></a>
              <a href="/restaurants/{{this._id}}"><button class="btn btn-link btn-sm">Details</button></a>
              <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger btn-sm text-white">delete</button>
              </form>
            </div>
          </div>
        </a> 
      </div>
        {{/each}}
  </div>
</div>